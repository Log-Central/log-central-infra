{
  "index_patterns": ["logs-*"],
  "priority": 500,
  "data_stream": {},
  "composed_of": ["ecs@mappings"],
  "template": {
    "mappings": {
      "dynamic_templates": [
        {
          "strings_as_flattened": {
            "match_mapping_type": "string",
            "mapping": { "type": "flattened" }
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "message": {
          "type": "match_only_text"
        },
        "level": {
          "type": "keyword"
        }
      }
    }
  }
}
